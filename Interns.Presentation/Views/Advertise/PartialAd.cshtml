@model Interns.Core.Data.Advertise

<div class="well">
    <h3>
        <strong> @Model.Title</strong>
    </h3>
    <div class="lead">@Model.Details</div>

    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        <span class="pull-right">
            @Html.ActionLink("Edit", "EditAdvertise", new { id = @Model.Id }) |
            @Html.ActionLink("Delete", "DeleteAdvertise", new { id = @Model.Id })
        </span>
    }
    
    <div class="lead">
        <i>@Model.City</i>
    </div>

    <div class="pull-left label label-primary">Date Created: @Model.CreateDate</div>
    <span class="pull-right label label-primary"> Application Deadline: @Model.EndDate</span>
</div>

