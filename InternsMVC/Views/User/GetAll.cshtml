@model IEnumerable<InternsDataAccessLayer.Entities.User>

@{
    ViewBag.Title = "All Users";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Users</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th> 
                <th>Name</th>
                <th>University</th>
                <th class="text-right">Email</th> 
                <th class="text-right">Role</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td class="text-right">@item.Id</td>
                <td>@Html.ActionLink(item.UserName, "Edit", new { item.Id })</td>
                @if (item.University != null)
                {
                    <td>@item.University</td>
                }
                else
                {
                    <td>-</td>
                }
                <td class="text-right">@item.Email</td>
                <td class="text-right">@item.Role.Type</td>
                <td class="text-center">
                        <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                </td>
            </tr>
                }
        </table>
    </div>
    <div class="panel-footer"> @Html.ActionLink("Add a new User", "Create", null, new {@class = "btn btn-default"}) </div>
</div>